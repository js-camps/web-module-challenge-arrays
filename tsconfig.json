{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true, // Ensure declaration files are generated
    "declarationDir": "./dist" // Optional: specify where to put declaration files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
